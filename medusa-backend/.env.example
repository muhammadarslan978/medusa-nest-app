# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/medusa_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT & Cookie Secrets (CHANGE IN PRODUCTION)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
COOKIE_SECRET=your-super-secret-cookie-key-min-32-chars

# CORS Settings
STORE_CORS=http://localhost:3001
ADMIN_CORS=http://localhost:9000
AUTH_CORS=http://localhost:3001,http://localhost:9000

# Backend URL
MEDUSA_BACKEND_URL=http://localhost:9000

# Publishable API Key (required for store APIs)
MEDUSA_PUBLISHABLE_KEY=pk_your_publishable_key_here

# Environment
NODE_ENV=development
